<div class="cards">
  <% @flats.each do |flat| %>
    <div class="card">
      <div class="imgcontainer">
        <img src=<%= flat.picture_url %>>
      </div>
      <h4><%= link_to flat.name, flat_path(flat) %></h4>
      <p><%= flat.address %></p>
      <p><%= flat.price_per_night %></p>
      <p><%= flat.number_of_guests %></p>
    </div>
  <% end %>
</div>


<%= link_to 'Add flat', new_flat_path %> |
